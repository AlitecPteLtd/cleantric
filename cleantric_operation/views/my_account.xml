<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <template id="my_account_form"  name="Account Info" inherit_id="portal.portal_my_details">
             <xpath expr="//form/div/div/div/div[7]" position="replace">
                            <div t-attf-class="form-group col-xl-6">
                                <label class="col-form-label" for="mobile">Mobile</label>
                                <t t-set="mobile_not_editable_message">Changing Mobile is not allowed once document(s) have been issued for your account. Please contact us directly for this operation.</t>
                                <input type="tel" name="mobile" t-attf-class="form-control" t-att-value="mobile or partner.mobile" t-att-readonly="None if partner_can_edit_vat else '1'" t-att-title="None if partner_can_edit_vat else mobile_not_editable_message" />
                            </div>
             </xpath>
              <xpath expr="//form/div/div/div/div[8]" position="replace">
                            <div class="clearfix" />
                            <div t-attf-class="form-group col-xl-6">
                                <label class="col-form-label" for="street">Street</label>
                                <t t-set="street_not_editable_message">Changing Street is not allowed once document(s) have been issued for your account. Please contact us directly for this operation.</t>
                                <input type="text" name="street" t-attf-class="form-control" t-att-value="street or partner.street" t-att-readonly="None if partner_can_edit_vat else '1'" t-att-title="None if partner_can_edit_vat else street_not_editable_message" />
                            </div>
              </xpath>
             <xpath expr="//form/div/div/div/div[10]" position="replace">
                            <div t-attf-class="form-group col-xl-6">
                                <label class="col-form-label" for="street2">Unit No</label>
                                <t t-set="street2_not_editable_message">Changing Unit No is not allowed once document(s) have been issued for your account. Please contact us directly for this operation.</t>
                                <input type="text" name="street2" t-attf-class="form-control " t-att-value="street2 or partner.street2" t-att-readonly="None if partner_can_edit_vat else '1'" t-att-title="None if partner_can_edit_vat else street2_not_editable_message" />
                            </div>
             </xpath>
             <xpath expr="//form/div/div/div/div[11]" position="replace">
                            <div t-attf-class="form-group  col-xl-6">
                                <label class="col-form-label" for="city">City</label>
                                <t t-set="city_not_editable_message">Changing City is not allowed once document(s) have been issued for your account. Please contact us directly for this operation.</t>
                                <input type="text" name="city" t-attf-class="form-control" t-att-value="city or partner.city" required="0" t-att-readonly="None if partner_can_edit_vat else '1'" t-att-title="None if partner_can_edit_vat else city_not_editable_message"  />
                            </div>
             </xpath>
             <xpath expr="//form/div/div/div/div[12]" position="replace">
                            <div t-attf-class="form-group  col-xl-6">
                                <label class="col-form-label label-optional" for="zipcode">Zip / Postal Code</label>
                                <t t-set="zip_not_editable_message">Changing ZipCode is not allowed once document(s) have been issued for your account. Please contact us directly for this operation.</t>
                                <input type="text" name="zipcode" t-attf-class="form-control " t-att-value="zipcode or partner.zip" t-att-readonly="None if partner_can_edit_vat else '1'" t-att-title="None if partner_can_edit_vat else zip_not_editable_message"  />
                            </div>
             </xpath>
             <xpath expr="//form/div/div/div/div[13]" position="replace">
                            <div t-attf-class="form-group col-xl-6">
                                <label class="col-form-label" for="country_id">Country</label>
                                <t t-set="country_not_editable_message">Changing Country is not allowed once document(s) have been issued for your account. Please contact us directly for this operation.</t>
                                <select name="country_id" t-attf-class="form-control " t-att-disabled="None if partner_can_edit_vat else 'true'" t-att-title="None if partner_can_edit_vat else country_not_editable_message" >
                                    <option value="">Country...</option>
                                    <t t-foreach="countries or []" t-as="country">
                                        <option t-att-value="country.id" t-att-selected="country.id == int(country_id) if country_id else country.id == partner.country_id.id">
                                            <t t-esc="country.name" />
                                        </option>
                                    </t>
                                </select>
                            </div>
             </xpath>
             <xpath expr="//form/div/div/div/div[14]" position="replace">
                            <div t-attf-class="form-group #{error.get('state_id') and 'o_has_error' or ''} col-xl-6 " style="display:block !important">
                                <label class="col-form-label label-optional" for="state_id">State / Province</label>
                                <t t-set="state_not_editable_message">Changing State is not allowed once document(s) have been issued for your account. Please contact us directly for this operation.</t>
                                <select name="state_id" t-attf-class="form-control #{error.get('state_id') and 'is-invalid' or ''}" t-att-disabled="None if partner_can_edit_vat else 'true'" t-att-title="None if partner_can_edit_vat else state_not_editable_message" >
                                    <option value="">select...</option>
                                    <t t-foreach="states or []" t-as="state">
                                        <option t-att-value="state.id" t-att-data-country_id="state.country_id.id" t-att-selected="state.id == partner.state_id.id">
                                            <t t-esc="state.name" />
                                        </option>
                                    </t>
                                </select>
                            <input type="hidden" name="redirect" t-att-value="redirect"/>
                            </div>
             </xpath>
                          <xpath expr="//form/div/div/div/div[15]" position="replace">
                          </xpath>
         </template>
    </data>
</odoo>